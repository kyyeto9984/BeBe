<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_margin="5dp"
        android:layout_marginBottom="18dp"
        card_view:cardBackgroundColor="@color/textColorPrimary"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="16dp">


            <com.bebe.lsi.bebe.CircleImage.CircleImageView
                android:id="@+id/profile"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/profile"
                android:text="영우의 첫 걸음마 !"
                android:textColor="@color/ColorPrimary"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/profile"
                android:text="5월 28일 12:09"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile"
                android:layout_marginTop="15dp"
                android:text="오늘은 영우가 첫 걸음마를 했다!!\n우리 영우가 다른아이들 보다 더 빨리 걸음마를\n해서 너무 기분이 좋았다!!"
                android:textColor="#000000"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/boardImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/content"
                android:layout_marginTop="10dp"
                android:background="#eaeaea"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/boardImage"
                android:layout_marginTop="10dp"
                android:background="#eaeaea" />

            <Button
                android:id="@+id/btn21"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_below="@id/line2"
                android:layout_marginTop="10dp"
                android:background="@color/ColorPrimary"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="좋아요!"
                android:textColor="#fff"
                android:textSize="13dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn22"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_below="@id/line2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/ColorPrimary"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="수정"
                android:textColor="#fff"
                android:textSize="13dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn23"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/line2"
                android:layout_marginTop="10dp"
                android:background="@color/ColorPrimary"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="삭제"
                android:textColor="#fff"
                android:textSize="13dp"
                android:textStyle="bold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
